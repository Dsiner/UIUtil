<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lib_pub_dimen_row_height"
    android:background="@drawable/lib_pub_select_row"
    android:paddingLeft="@dimen/lib_pub_dimen_margin"
    android:paddingRight="@dimen/lib_pub_dimen_margin">

    <ImageView
        android:id="@+id/iv_layout_row_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_layout_row_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_layout_row_icon"
        android:singleLine="true"
        android:textColor="@color/lib_pub_color_text_main"
        android:textSize="@dimen/lib_pub_dimen_text_sub" />

    <com.d.lib.common.view.toggle.ToggleButton
        android:id="@+id/tb_layout_row_toggle"
        android:layout_width="49dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        app:lib_pub_tbtn_colorPadding="@color/lib_pub_color_hint"
        app:lib_pub_tbtn_colorThumb="@color/lib_pub_color_white"
        app:lib_pub_tbtn_colorTrackOff="@color/lib_pub_color_white"
        app:lib_pub_tbtn_colorTrackOpen="@color/lib_pub_color_main"
        app:lib_pub_tbtn_duration="150"
        app:lib_pub_tbtn_padding="1dp" />

    <ImageView
        android:id="@+id/iv_layout_row_goto"
        android:layout_width="9dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/lib_pub_ic_more_right" />

    <TextView
        android:id="@+id/tv_layout_row_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/iv_layout_row_goto"
        android:gravity="center"
        android:textColor="@color/lib_pub_color_text_hint"
        android:textSize="@dimen/lib_pub_dimen_text_mini" />

    <TextView
        android:id="@+id/tv_layout_row_number"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/iv_layout_row_goto"
        android:background="@drawable/lib_pub_circle_msg_number"
        android:gravity="center"
        android:textColor="@color/lib_pub_color_white"
        android:textSize="10dp"
        android:visibility="gone" />
</RelativeLayout>