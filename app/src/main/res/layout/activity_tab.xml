        app:lib_ui_stab_indicatorPadding="20dp"
        app:lib_ui_stab_indicatorRadius="0.5dp"
        app:lib_ui_stab_indicatorType="none"
        app:lib_ui_stab_indicatorWeight="1dp"
        app:lib_ui_stab_indicatorWidth="40dp"
        app:lib_ui_stab_type="view_group" />

    <android.support.v4.view.ViewPager
